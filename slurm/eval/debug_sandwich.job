#!/bin/bash

#SBATCH --partition=gpu_titanrtx_shared
#SBATCH --gres=gpu:1
#SBATCH --job-name=SW_DEBUG
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=16
#SBATCH --time=01:00:00
#SBATCH --mem=32000M
#SBATCH --output=slurm/outputs/eval/sandwich/sandwich_debug_%A.out

module purge
module load 2022
module load Miniconda3/4.12.0

source activate claficle

# name datadir in scratch directory
datadir=$TMPDIR/$USER/data

# make the datadir
mkdir -p $datadir

# copy the data to the scratch dir $TMPDIR for quicker access
cp -r $HOME/repos/claficle/data/* $datadir/

srun python -u claficle/run/eval.py --config-name=debug_eval \
  benchmark.data_dir=$datadir
