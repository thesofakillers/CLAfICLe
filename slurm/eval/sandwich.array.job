#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --job-name=SW_EVAL
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=5
#SBATCH --time=24:00:00
#SBATCH --mem=32000M
#SBATCH --array=1-15%3
#SBATCH --output=slurm/outputs/eval/sandwich/arrays/sandwich_%A_%a.out

module purge
module load 2022
module load Miniconda3/4.12.0

source activate claficle

# name datadir in scratch directory
datadir=$TMPDIR/$USER/data

# make the datadir
mkdir -p $datadir

# copy the data to the scratch dir $TMPDIR for quicker access
cp -r $HOME/repos/claficle/data/* $datadir/

HPARAMS_FILE=slurm/eval/sandwich.array.txt

srun python -u claficle/run/eval.py model=sandwich \
  data.data_dir=$datadir \
  $(head -$SLURM_ARRAY_TASK_ID $HPARAMS_FILE | tail -1)
