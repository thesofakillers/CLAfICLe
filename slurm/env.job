#!/bin/bash

#SBATCH --partition=gpu_shared
#SBATCH --gres=gpu:0
#SBATCH --job-name=ENV
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=3
#SBATCH --time=00:30:00
#SBATCH --mem=32000M
#SBATCH --output=lisa/outputs/environment_install_%A.out

module purge
module load 2022
