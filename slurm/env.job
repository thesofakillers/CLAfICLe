#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --job-name=ENV
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=3
#SBATCH --time=00:30:00
#SBATCH --mem=020000M
#SBATCH --output=slurm/outputs/environment_install_%A.out

module purge
module load 2022
module load Anaconda3/2022.05

conda env remove -n claficle
conda create -n claficle python=3.8.13 -y
source activate claficle
pip install -r requirements.txt
