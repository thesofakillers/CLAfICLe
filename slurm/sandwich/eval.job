#!/bin/bash

#SBATCH --partition=gpu_titanrtx
#SBATCH --gres=gpu:1
#SBATCH --job-name=SW_EVAL
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=16
#SBATCH --time=48:00:00
#SBATCH --mem=32000M
#SBATCH --output=slurm/outputs/sandwich_eval_%A.out

module purge
module load 2022
module load Miniconda3/4.12.0

source activate claficle

# name datadir in scratch directory
datadir=$TMPDIR/$USER/data

# make the datadir
mkdir -p $datadir

# copy the data to the scratch dir $TMPDIR for quicker access
cp -r -v $HOME/repos/claficle/data/* $datadir/

srun python -u claficle/run/eval.py model=sandwich \
  benchmark.data_dir=$datadir \
  en=false fr=true de=false
